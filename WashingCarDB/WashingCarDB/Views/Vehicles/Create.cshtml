@model WashingCarDB.Models.VehicleViewModel

@{
    ViewData["Title"] = "Información del Vehiculo";
}

<h1>Información de vehiculo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Services" />
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberPlate" class="control-label"></label>
                <input asp-for="NumberPlate" class="form-control" />
                <span asp-validation-for="NumberPlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" asp-items="Model.Services" class="form-control"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Tomar Servicio" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Regresar</a>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
